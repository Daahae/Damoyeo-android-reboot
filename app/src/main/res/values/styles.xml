<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/appMainColor</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/appMainColor</item>
        <item name="colorPrimaryDark">@color/appMainColor</item>
        <item name="colorAccent">@color/colorWhite</item>

        <!--Status Bar 배경색-->
        <item name="android:statusBarColor">@color/colorWhite</item>
        <!--Status Bar 글자색깔-->
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="progress_bar_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:anim/cycle_interpolator</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- preference -->
    <style name="Pref_Category_Title_Normal">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#ffaaaaaa</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginLeft">23dp</item>
        <item name="android:layout_marginRight">23dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
    <style name="Pref_Category_Title_Large">
        <item name="android:textSize">23dp</item>
        <item name="android:textColor">#ffaaaaaa</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginLeft">23dp</item>
        <item name="android:layout_marginRight">23dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
    <style name="Pref_Category_Title_XLarge">
        <item name="android:textSize">28dp</item>
        <item name="android:textColor">#ffaaaaaa</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginLeft">23dp</item>
        <item name="android:layout_marginRight">23dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="Pref_Title_normal">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/tab_option_menu_text_color</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="Pref_Title_Large">
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/tab_option_menu_text_color</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="Pref_Title_XLarge">
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/tab_option_menu_text_color</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



</resources>
