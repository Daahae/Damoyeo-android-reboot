<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_friend_photo_my_page"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        app:srcCompat="@drawable/ic_friend_profile" />
    <TextView
        android:id="@+id/txt_friend_name_my_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txt_friend_address_my_page"
        android:layout_alignTop="@+id/img_friend_photo_my_page"
        android:text="friend"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/txt_friend_address_my_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_friend_photo_my_page"
        android:layout_toEndOf="@+id/img_friend_photo_my_page"
        android:text="xx도 xx시 xxx동" />
    <ImageView
        android:id="@+id/btn_add_sub_friend_item"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/img_friend_photo_my_page"
        android:layout_marginEnd="11dp"
        app:srcCompat="@drawable/ic_sub_gray" />
</RelativeLayout>